{
  "manifest_version": 2,
  "name": "Firefox Relay",
  "version": "2.1.1",

  "description": "__MSG_extensionDescription_v1__",

  "default_locale": "en",

  "icons": {
    "48": "icons/placeholder-logo.png"
  },

  "browser_specific_settings": {
      "gecko": {
          "id": "private-relay@firefox.com",
          "strict_min_version": "63.0"
      }
  },

  "background": {
      "scripts": ["js/background/background.js", "js/background/context-menu.js"]
  },

  "browser_action": {
      "browser_style": true,
      "default_icon": {
          "32": "icons/placeholder-logo.png"
      },
      "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": [
        "http://127.0.0.1/**"
      ],
      "js": ["js/relay.firefox.com/installation_indicator.js"]

    },
    {
      "matches": [
          "http://127.0.0.1/accounts/profile/**"
      ],
      "js": ["js/relay.firefox.com/get_profile_data.js"]
    },
    {
      "matches": [
          "http://127.0.0.1/accounts/settings/**"
      ],
      "js": ["js/relay.firefox.com/settings_refresh.js"]
    },
    {
      "matches": [
          "<all_urls>"
      ],
      "js": [
        "js/shared/utils.js",
        "js/other-websites/fathom.js",
        "js/other-websites/email_detector.js",
        "js/other-websites/add_input_icon.js",
        "js/other-websites/fill_relay_address.js",
        "js/shared/metrics.js"
      ],
      "css": ["css/relay.css"],
      "all_frames": true
    }
  ],

  "permissions": [
      "<all_urls>",
      "storage",
      "menus"
  ]
}
